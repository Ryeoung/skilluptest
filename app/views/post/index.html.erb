<%= render "nav" %>
<div class="container">
    <table class="table">
      <thead>
        <tr>
          <th scope="col" style="width:10%">번호</th>
          <th scope="col" style="width:60%">제목</th>
          <th scope="col" style="width:10%">작성자</th>
          <th scope="col"style="width:10%">작성시간</th>
        </tr>
      </thead>
      <tbody>
          <% @data.each do |d| %>
            <tr>
              <th scope="row"><%= d.id %></th>
              <td><a href="/post/show/<%= d.id %>"><%= d. title %></a></td> 
              <td><%= d.user.username%></td>
              <td><%=d.created_at.to_s.split('+').first.split(' ').last %></td>
            </tr>
        <% end %>
      </tbody>
    </table>
    <a href="/post/new"><button type="button" class="btn btn-dark">글쓰기</button></a>
</div>